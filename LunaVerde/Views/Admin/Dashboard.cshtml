<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link href="~/css/header.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">

</head>
<body>
    <div class="container mt-5" style="font-family: " DM Serif Text", serif;">
        <h1 class="text-center">Admin Dashboard</h1>

        <h2>Customers</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Registration Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in ViewBag.Customers)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>@customer.RegistrationDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Reservations</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Customer ID</th>
                    <th>Reservation Date</th>
                    <th>Reservation Time</th>
                    <th>Table Number</th>
                    <th>Guests Count</th>
                    <th>Special Requests</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in ViewBag.Reservations)
                {
                    <tr>
                        <td>@reservation.ReservationID</td>
                        <td>@reservation.CustomerID</td>
                        <td>@reservation.ReservationDate.ToShortDateString()</td>
                        <td>@reservation.ReservationTime</td>
                        <td>@reservation.TableNumber</td>
                        <td>@reservation.GuestsCount</td>
                        <td>@reservation.SpecialRequests</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2> Orders </h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CustomerName</th>
                    <th>PhoneNumber</th>
                    <th>OrderDate</th>
                    <th>TotalPrice</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in ViewBag.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.CustomerName</td>
                        <td>@order.PhoneNumber</td>
                        <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                        <td>@order.TotalPrice</td> <!-- Вывод в виде валюты -->
                    </tr>
                }
            </tbody>
        </table>

        <h2> Order Items </h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ItemId</th>
                    <th>OrderId</th>
                    <th>MenuId</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderItem in ViewBag.OrderItem)
                {
                    <tr>
                        <td>@orderItem.OrderItemId</td>
                        <td>@orderItem.OrderId</td>
                        <td>@orderItem.MenuId</td>
                        <td>@orderItem.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2> Menu </h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>ImagePath</th>
                    <th>MenuItem</th>
                    <th>Actions</th> <!-- Колонка для действий -->
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in ViewBag.Menu)
                {
                    <tr>
                        <td>@menu.MenuId</td>
                        <td>@menu.Name</td>
                        <td>@menu.Description</td>
                        <td>@menu.Price</td>
                        <td>@menu.ImagePath</td>
                        <td>@menu.MenuItem</td>
                        <td>
                            <!-- Кнопка для удаления -->
                            <form asp-controller="Adding" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@menu.MenuId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Adding" asp-action="Index"><button type="button" class="btn btn-dark w-100">Add to table</button></a>

    </div>
</body>
</html>
