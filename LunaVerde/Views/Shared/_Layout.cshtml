<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LunaVerde</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LunaVerde.styles.css" asp-append-version="true" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
    </head>
<body>
    <header>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <svg width="77" height="77" viewBox="0 0 77 77" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <rect width="77" height="77" fill="url(#pattern0_1_4)" />
                    <defs>
                        <pattern id="pattern0_1_4" patternContentUnits="objectBoundingBox" width="1" height="1">
                            <use xlink:href="#image0_1_4" transform="scale(0.0078125)" />
                        </pattern>
                        <image id="image0_1_4" width="128" height="128" xlink:href="data:image/png;base64," />
                    </defs>
                </svg>
            </a>
        </div>
        <nav>
            <!-- Стандартное меню -->
            <ul class="desktop-menu">
                <li><a asp-controller="Menu" asp-action="Index">Menu</a></li>
                <li><a asp-controller="Authorization" asp-action="Index">Authorization</a></li>
                <li><a asp-controller="Reservations" asp-action="Index">Reservation</a></li>
            </ul>

            <!-- Иконка бургер-меню (она будет скрыта на большом экране) -->
            <div id="burger-icon" class="burger-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" width="30" height="30">
                    <path d="M0 6h30v2H0zm0 7h30v2H0zm0 7h30v2H0z" fill="currentColor" />
                </svg>
            </div>

            <!-- Меню для мобильных устройств (по умолчанию скрыто) -->
            <ul id="mobile-menu" class="mobile-menu">
                <li><a asp-controller="Menu" asp-action="Index">Menu</a></li>
                <li><a asp-controller="Authorization" asp-action="Index">Authorization</a></li>
                <li><a asp-controller="Reservations" asp-action="Index">Reservation</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer text-white pt-4">
        <div class="container">
            <div class="row">
                <!-- О нас -->
                <div class="col-md-4">
                    <h5>About Us</h5>
                    <p>
                        Welcome to our restaurant! We offer the best dishes in town, made with love and fresh ingredients.
                    </p>
                </div>

                <!-- Контакты -->
                <div class="col-md-4">
                    <h5>Contacts</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt"></i> Toskana, st. Via della Stella</li>
                        <li><i class="bi bi-telephone"></i> +39 (219) 209-21-21</li>
                        <li><i class="bi bi-envelope"></i> info@luna_verde.com</li>
                    </ul>
                </div>

                <!-- Социальные сети -->
                <div class="col-md-4">
                    <h5>We are on social networks</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white me-3"><i class="bi bi-facebook fs-4"></i></a></li>
                        <li><a href="#" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a></li>
                        <li><a href="#" class="text-white me-3"><i class="bi bi-twitter fs-4"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Нижняя часть футера -->
        <div class="custom-footer-bottom text-center py-3 mt-4">
            <small>&copy; 2024 Luna Verde. All rights reserved.</small>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
